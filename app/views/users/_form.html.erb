<%= form_for :user, :html => {:class => 'create_user'}, url: '/users' do |f| %>


  <%= f.label "What's your DJ name, yo?" %>
  <%= f.text_field :dj_name %>
  <br>

  <%= f.label "Choose an image url as your avatar" %>
  <%= f.text_field :avatar %>
  <br>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>

  <%= f.label "Enter your password" %>
  <%= f.password_field :password %>
  <br>

  <%= f.label "One more time, just to be sure" %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.submit "Submit" %>

<% end %>
