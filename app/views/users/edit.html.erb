<h1>Edit your profile:</h1>
<% if current_user && (@user.id != current_user.id) %>
   <p> You can only edit <%= link_to 'your own profile!', user_path(current_user) %> Duh! </p>
<% elsif current_user && (@user.id == current_user.id) %>
   <%= form_for :user do |f| %>
      <%= f.label "What's your new DJ name, yo?" %>
      <%= f.text_field :dj_name %>
      <br>

      <%= f.label "Enter a new avatar" %>
      <%= f.text_field :avatar %>
      <br>

      <%= f.label "New email address:" %>
      <%= f.text_field :email %>
      <br>

      <%= f.label "New password" %>
      <%= f.password_field :password %>
      <br>

      <%= f.label "One more time, just to be sure" %>
      <%= f.password_field :password_confirmation %>
      <br>

      <%= f.submit "Submit Changes" %>
   <% end %>
<% else %>
   <%# display nag to login when CREEPING as guest %>
   <p class="nag"> seriously though how tf did you get here? Stop sneaking around!
   <br><%= link_to 'LOGIN', '/login' %> or <%= link_to 'CREATE AN ACCOUNT', '/signup' %> ALREADY! :/</p>
<% end %>
