<%= form_for [ @song ] do |f| %>
   <p>
      <%= f.label "Title. Ex: Shake it Off*" %><br/>
      <%= f.text_field :title %>
   </p>
   <p>
      <%= f.label "Artist. Ex: Dolly Parton*" %><br/>
      <%= f.text_field :artist %>
   </p>
      <%= f.label "Album. EX: Thriller" %><br/>
      <%= f.text_field :album %>
   </p>
   <p>
      <%= f.label "Date of Album/Single Release date." %><br/>
      <%= f.date_select :date_released %>
   </p>
   <p>
      <%= f.label "Youtube or Soundcloud URL*" %><br/>
      <%= f.text_field :audio %>
   </p>
   <p>
      <%= f.label "Add this song to a mixtape:" %><br/>
      <% mixtapes = Mixtape.all; %>
      <% mixtapes << Mixtape.new(:id => 42, :name => 'Not now') %>
      <%= f.collection_select(:mixtape_id, mixtapes, :id, :name, {:selected => 42}) %>
   </p>
   <p>
      <%= f.submit "Submit Song to Mix.r Library" %>
   </p>
<% end %>
