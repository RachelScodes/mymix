<h1>Login</h1>
<%= form_tag '/login' do %>
  <% flash.each do |name,  msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>

  <br>
  <%= label_tag "dj_name" %>
  <%= text_field_tag :dj_name %>
  <br>

  <%= label_tag "password" %>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Submit" %>

<% end %>
