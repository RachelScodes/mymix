<% if current_user %>
   <%= form_for [@song] do |f| %>
      <p>
         <%= f.label :title, "Shake it Off" %><br/>
         <%= f.text_field :title %>
      </p>
      <p>
         <%= f.label :artist, "Dolly Parton" %><br/>
         <%= f.text_field :artist %>
      </p>
         <%= f.label :album, "Thriller" %><br/>
         <%= f.text_field :album %>
      </p>
      <p>
         <%= f.label :date_released %><br/>
         <%= f.date_select :date_released %>
      </p>
      <p>
         <%= f.label :src_url, "URL" %><br/>
         <%= f.text_field :src_url %>
      </p>
         <%= f.hidden_field :mixtape_id, :value => @mixtape.id %>
      <p>
        <%= f.submit "Add to #{@mixtape.name}" %>
      </p>
   <% end %>
<% end %>
