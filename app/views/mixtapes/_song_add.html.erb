<% if current_user %>
   <%= form_for [@song] do |f| %>
      <p class="field">
         <%= f.label "Title, Ex: Shake it Off *" %><br/>
         <%= f.text_field :title %>
      </p>
      <p class="field">
         <%= f.label "Artist, Ex: Dolly Parton *" %><br/>
         <%= f.text_field :artist %>
      </p>
         <%= f.label "Album, Ex: Thriller" %><br/>
         <%= f.text_field :album %>
      </p>
      <p class="field">
         <%= f.label "Date of Album/Single Release date." %><br/>
         <%= f.date_select :date_released, prompt: true, start_year: 2015, end_year: 1900, discard_day: true, include_blank: true %>
      </p>
      <p class="field">
         <%= f.label "Audio aka Youtube URL *" %><br/>
         <%= f.text_field :audio %>
         <p id="youtube-instructions">
            Just place the regular old youtube url from the address bar! into the field above!
         </p>
      </p>
         <%= f.hidden_field :mixtape_id, :value => @mixtape.id %>
      <p class="field" id="submit">
        <%= f.submit "Add to #{@mixtape.name}" %>
      </p>
   <% end %>
<% end %>
