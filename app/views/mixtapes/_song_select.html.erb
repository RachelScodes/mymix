<% if current_user %>
   <% if Song.all.length > 1 %>
      <%= form_for :mixtapes_songs, url: record_song_mixtape_path do |f| %>

         <p class="field" id="drop-down">
            <%= f.label "Choose a song from the Mix.r Library" %><br/>
            <%= f.collection_select(:song_id, Song.all, :id, :title) %>
         </p>
            <%= f.hidden_field :mixtape_id, :value => @mixtape.id%>
         <p class="field" id="submit">
            <%= f.submit "Add song to #{@mixtape.name}"%>
         </p>

      <% end %>
   <% end %>
<% end %>
