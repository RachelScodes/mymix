<!DOCTYPE html>
<html>
<head>
  <title>MymixApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav-top">
   <%= link_to 'Home', '/' %> | <%= link_to 'Mixtapes', mixtapes_path %> | <%= link_to 'Songs', songs_path %> | <%= link_to 'Browse DJs', users_path %> | <%= link_to 'Hall of Fame', '/' %>
</div>

<% if current_user %>
   <div id="sidebar">
        <ul id="side-links">
           <%= "Yo #{current_user.dj_name}!" %>
           <li><%= link_to 'Create a New Mixtape', new_mixtape_path(current_user) %></li>
           <li><%= link_to 'Add Song to the Mix.r Library', new_song_path(current_user) %></li>
           <li><%= link_to 'View Your Profile', user_path(current_user) %></li>
           <li><%= link_to 'Favorite DJs?', users_path %></li>
           <li><%= link_to 'Edit Your Profile', edit_user_path(current_user) %></li>
           <li><%= link_to "Logout", '/logout' %></li>
        </ul>
   </div>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Create a DJ Account', '/signup' %>
<% end %>

<div id="app">
   <%= yield %>
</div>

<div class="nav-bot">
</div>
</body>
</html>
